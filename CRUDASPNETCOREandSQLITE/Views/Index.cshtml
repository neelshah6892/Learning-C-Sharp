<html>
    <head>
        <meta name="viewport" content="width=device-width">
        <title>Index</title>
    </head>

    <body>
        <h3>Product List</h3>
        <table border="1">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Action</th>
            </tr>
            @foreach(var product in ViewBag.products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                </tr>
            }
        </table>
    </body>
</html>